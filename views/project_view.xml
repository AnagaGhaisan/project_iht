<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_project_form_inherit_iht_v2" model="ir.ui.view">
        <field name="name">project.project.form.inherit.iht.v2</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>

        <field name="arch" type="xml">

            <xpath expr="//sheet" position="inside">

                <separator string="Informasi Tambahan Proyek" />

                <notebook string="Detail IHT">

                    <page string="Informasi Umum">
                        <group>
                            <group>
                                <field name="lokasi_proyek"/>
                                <field name="source_aplikasi_pendukung" widget="url"/>
                            </group>
                            <group>
                                <field name="manajer_proyek"/>
                                <field name="status_proyek"/>
                            </group>
                        </group>
                    </page>

                    <page string="Timeline Proyek">
                        <group>
                            <group>
                                <field name="tanggal_mulai_proyek"/>
                                <field name="tanggal_selesai_proyek"/>
                            </group>
                            <group>
                                <field name="anggaran_proyek"/>
                            </group>
                        </group>
                    </page>

                    <page string="Pekerja Remote">
                        <group>
                            <label string="Daftar Pekerja Remote (JSON)" />
                            <field name="daftar_perkerja_remote" placeholder='["Andi", "Budi", "Siti"]'/>
                        </group>
                    </page>

                </notebook>

            </xpath>

        </field>
    </record>
</odoo>
